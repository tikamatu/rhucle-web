<h1>Visual Arts</h1>

<table class="table table-striped" border="1" align=center style="padding-right:20px; padding-left:20px;">
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.image.url, size:"150x150" %></td>
        <td><%= link_to '削除', admin_visual_art_path(image), method: :delete, data: { confirm: '本当に削除しますか？データの復旧はできません。' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_admin_visual_art_path %>
