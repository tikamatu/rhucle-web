<h1>Discography</h1>

<table class="table table-striped" border="1" align=center style="padding-right:20px; padding-left:20px;">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Operation</th>
    </tr>
  </thead>

  <tbody>
    <% @discographys.each do |disc| %>
      <tr>
        <td><%= disc.title %></td>
        <td><%= link_to 'Detail', admin_discography_path(disc) %></td>
        <td><%= link_to 'Edit', edit_admin_discography_path(disc) %></td>
        <td><%= link_to 'Delete', admin_discography_path(disc), method: :delete, data: { confirm: 'sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

