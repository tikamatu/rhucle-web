<h1>Schedule</h1>

<table class="table table-striped" border="1" align=center style="padding-right:20px; padding-left:20px;">
  <thead>
    <tr>
      <th>日時</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.started_on.strftime("%d/%m/%Y") %></td>
        <td><%= link_to '詳細', admin_schedule_path(event) %></td>
        <td><%= link_to '編集', edit_admin_schedule_path(event) %></td>
        <td><%= link_to '削除', admin_schedule_path(event), method: :delete, data: { confirm: '本当に削除しますか？データの復旧はできません。' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_admin_schedule_path %>
