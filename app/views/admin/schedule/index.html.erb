<h1>Schedule</h1>

<table class="table table-striped" border="1" align=center style="padding-right:20px; padding-left:20px;">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3">Operation</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.started_on.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Detail', admin_schedule_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_schedule_path(event) %></td>
        <td><%= link_to 'Delete', admin_schedule_path(event), method: :delete, data: { confirm: 'sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

