<div class="slider-container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 slider">
        <div class="flexslider">
          <ul class="slides">
            <% @top_photos.each do |photo| %>
            <li>
              <% if photo.url.present? %>
                <%= link_to image_tag(photo.photo.url), photo.url, target: "_blank" %>
              <% else %>
                <%= image_tag(photo.photo.url) %>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
</div>

