		</nav>
    <div class="container" style="width:1022px;">
      <div class="row" style="text-align:center;">
        <%= yield %>
      </div><!--/row-->

      <footer>
        <p>&copy; Rhucle Official WEB Site</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
