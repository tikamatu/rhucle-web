<div style="text-align:center;padding:25px;">
  <% if @disc.artwork? %>
    <%= link_to image_tag(@disc.artwork.url, size: "300x300"), @disc.url, { target: "_blank" } %>
  <% end %>

  <table class="table table-striped table-hover itemInfo">
    <tbody>
      <tr>
        <td><strong>Title</strong></td>
        <td><%= @disc.title %></td>
      </tr>
      <tr>
        <td><strong>Artist</strong></td>
        <td><%= @disc.artist %></td>
      </tr>
      <tr>
        <td><strong>Release date</strong></td>
        <td><%= @disc.released_on.strftime("%d/%m/%Y") %></td>
      </tr>
      <tr>
        <td><strong>Label</strong></td>
        <td><%= @disc.record_label %></td>
      </tr>
      <tr>
        <td><strong>Catalog</strong></td>
        <td><%= @disc.catalog %></td>
      </tr>
      <tr>
        <td><strong>Artwork by</strong></td>
        <td><%= @disc.artworked_by %></td>
      </tr>
      <tr>
        <td><strong>Format</strong></td>
        <td><%= @disc.format %></td>
      </tr>
      <tr>
        <td><strong>Track List</strong></td>
        <td><%= simple_format(@disc.track_list) %></td>
      </tr>
    </tbody>
  </table>
</div>
