<div>
  <% (2015..Time.current.year).reverse_each do |year| %>
    <div style="text-align:left; margin-left: 100px; padding-bottom: 5px;">
    <h3 style="margin-top:20px;"><%= year %></h3>
    <% (@events[year] || []).each do |event| %>
      <div style="padding-left: 50px; font-size: 15px;">
        <div style="float: left;"><%= event.started_on.strftime("%m/%d") %></div>
        <div style="float: left;padding-left:10px;"><%= event.detail %></div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
